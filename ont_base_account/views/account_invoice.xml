<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ont_base_account_view_account_invoice_filter" model="ir.ui.view">
        <field name="name">ont_base_account_view_account_invoice_filter</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="before">	    	
                <field name="amount_total" string="Total"/>
            </field>                        
        </field>
    </record>
    <record id="ont_base_account_invoice_form" model="ir.ui.view">
        <field name="name">ont_base_account_invoice_form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page/field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="replace">
                <field name="price_unit" widget="monetary" />
            </xpath>            
        </field>
    </record>
    <record id="ont_base_account_invoice_tree" model="ir.ui.view">
        <field name="name">ont_base_account_invoice_tree</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">	    	
                <field name="inv_vat"/>
	       </field>
            <field name="state" position="after">
                <field name="partner_bank_name"/>
            </field>
            <field name="amount_total_signed" position="before">
                <field name="amount_untaxed"/>
                <field name="amount_tax"/>
            </field>            
        </field>
    </record>
    <record id="ont_base_account_invoice_supplier_tree" model="ir.ui.view">
        <field name="name">ont_base_account_invoice_supplier_tree</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">	    	
                <field name="inv_vat"/>
	       </field>
            <field name="state" position="after">
                <field name="partner_bank_name"/>
            </field>
            <field name="amount_total_signed" position="before">
                <field name="amount_untaxed"/>
                <field name="amount_tax"/>
            </field>            
        </field>
    </record>
</odoo>