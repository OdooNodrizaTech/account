<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="account_invoice_shipping_expedition_invoice_supplier_form" model="ir.ui.view">
        <field name="name">account_invoice_shipping_expedition_invoice_supplier_form.tree</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <field name="reference" position="after">
                <field name="is_supplier_delivery_carrier" invisible="True"/>
                <field name="shipping_expedition_datas"  widget="binary"  filename="shipping_expedition_datas" attrs="{'invisible':[('is_supplier_delivery_carrier', '==', False)]}" />
            </field>
            <xpath expr="//page[1]" position="after">
                <page id="shipping_expedition_ids" string="Expediciones">
                    <field name="shipping_expedition_ids" >
                        <tree string="Expediciones">
                           <field name="picking_id" />
                            <field name="delivery_code" />
                            <field name="date" />
                            <field name="currency_id" invisible="1" />
                            <field name="cost" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>